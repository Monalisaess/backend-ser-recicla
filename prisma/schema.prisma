generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id    Int    @id @default(autoincrement())
  email String
  nome  String
  senha String
}

model Curso {
  id_curso Int @id @default(autoincrement())
  nome_curso String @unique
  registros Registro[]

  @@map("curso")
}

model Registro {
  id_registro Int @id @default(autoincrement())
  tipo String
  peso_em_gramas Decimal @db.Decimal(10, 2)
  timestamp DateTime @default(now())
  id_curso Int
  curso Curso @relation(fields: [id_curso], references: [id_curso])  

  @@map("registro")
}